@using MyFirstProject.Models.Entities
@model List<TblProducts>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}



    <!-- Content Header (Page header) -->
    

    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- Left col -->
            <section class="col-lg-12 connectedSortable">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">ÜRÜNLER <a href="/AdminUrunler/AddProduct/" class="btn btn-primary">Ekle</a></h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="example1" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>ÜRÜN ID</th>
                                    <th>ÜRÜN ADI</th>
                                    <th>KATEGORİSİ</th>
                                    <th>STOK</th>
                                    <th>FİYAT</th>
                                    <th>İŞLEMLER</th>

                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var A in Model)
                                {
                                    <tr>

                                        <td>@A.ProductID</td>
                                        <td>@A.ProductName</td>
                                        <td>@A.CategoryID</td>
                                        <td>@A.Stock</td>
                                        <td>@A.Price</td>
                                        <td>
                                            <a href="/AdminUrunler/UpdateProduct/@A.ProductID" class="btn btn-success">Güncelle</a>
                                            <a href="/AdminUrunler/DeleteProduct/@A.ProductID" class="btn btn-danger">Sil</a>
                                        </td>
                                       
                                    </tr>
                                }
                                </tbody>                          
                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
            </section>

        </div>


    </section>

