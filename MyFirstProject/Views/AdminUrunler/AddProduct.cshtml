@model MyFirstProject.Models.Entities.TblProducts
@{
    ViewBag.Title = "AddProduct";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<section class="content">
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">ÜRÜN EKLE</h3>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form method="post" form="form">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="exampleInputEmail1">ÜRÜN ADI</label>
                          @Html.TextBoxFor(x => x.ProductName, new {@class="form-control"})
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">TANIMI</label>
                          @Html.TextBoxFor(x =>x.Description, new {@class="form-control"})
                        </div>
                        <div class="form-group">
                            <label for="exampleInputFile">FİYATI</label>
                            @Html.TextBoxFor(x => x.Price, new { @class = "form-control" })

                      
                        </div>
                        <div class="form-group">
                            <label for="exampleInputFile">STOK</label>
                            @Html.TextBoxFor(x => x.Stock, new { @class = "form-control" })

                     
                        </div>
                        <div class="form-group">
                            <label for="exampleInputFile">KATEGORİSİ</label>
                            @Html.TextBoxFor(x => x.CategoryID, new { @class = "form-control" })
                        </div>
                     
                    </div>
                    <!-- /.box-body -->

                    <div class="box-footer">
                        <button class="btn btn-primary">Ekle</button>
                    </div>
                </form>
            </div>
     

        </div>

    </div>
    <!-- /.row -->
</section>
